<div class="container">
  <div class="d-flex justify-content-center flex-column">
    <div class="title text-center m-2">
    <h1> Ma location de mouette :
      <p class="fw-semibold"><%= @booking.mouette.name %></p>  </h1>
    </div>
    <div class="booking-body text-center d-flex flex-column justify-content-center align-items-center">
        <div class="row">
          <div class="my-5 gap-3 d-flex justify-content-center align-items-center">
            <div class="booking-infos d-flex flex-column justify-content-center align-items-center">

            <%# "waiting","accepted","rejected %>
              <p>
                <% if @booking.rejected? %>
                  <h2 class="text-bg-danger text-center p-3 fs-3">Réservamouette rejetée</h2>
                  <% elsif @booking.accepted? %>
                  <h2 class="text-bg-success p-3">Réservamouette acceptée</h2>
                  <% else %>
                  <h2 class="text-bg-info p-3">Réservamouette en attente</h2>
                <% end %>
                </p>
              <p class="text-center">Du <%= @booking.start_date.strftime('%d-%m-%Y') %> au <%= @booking.end_date.strftime('%d-%m-%Y') %></p>
            </div>

          <div class="price shadow-sm p-3 bg-body-tertiary rounded">
            <p><%= @booking.mouette.price %> €</p>
            <% days = @booking.end_date - @booking.start_date %>
            <% number_of_days = days.to_i %>
            <p><%= number_of_days %> jours</p>
            <p class="fw-semibold">Total : <%= @booking.mouette.price * days %> €</p>
          </div>
        </div>
      </div>
      <div class="image_tag col-12 col-sm-6 rounded mx-auto img-thumbnail">
        <%=cl_image_tag @mouette.photo.key, class:"img-fluid"%>
      </div>

      <h3 class="border-bottom border-primary-subtle my-3">En savoir + sur <%= @booking.mouette.name %> :</h3>
      <p class="fst-italic">
      Propriétaire : <%= @booking.mouette.owner.first_name%> <%= @booking.mouette.owner.last_name%>
      </p>
      <p class="fst-italic">
      Locataire : <%= @booking.renter.first_name%> <%= @booking.renter.last_name%>
      </p>
      <p class="border shadow-sm p-3 mb-5 bg-body-tertiary rounded">
      Description : <%= @booking.mouette.description%>
      </p>
    </div>

  </div>
</div>

<div class="d-flex justify-content-center align-items-center">
    <%= link_to "Voir les mouettes", root_path, class: "btn btn-info btn-lg my-3 col-2" %>
</div>
