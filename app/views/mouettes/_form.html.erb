<%= simple_form_for @mouette do |f| %>
  <div>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="d-flex flex-column align-items-center">
      <div class="d-flex flex-row justify-content-center align-items-baseline row row-cols-1 row-cols-sm-3">
        <div class="">
          <%= f.input :name,
          label: 'Le nom de votre mouette',
          error: 'Merci de nommer votre mouette',
          required: true %>
        </div>
        <div class="">
          <%= f.input :accessories,
          label: 'Accessoire',
          error: 'Choisissez un accessoire',
          collection: Mouette::ACCESSORIES %>
        </div>
        <div class="">
          <%= f.input :price,
          label: 'Prix journalier',
          error: 'Définissez un prix journalier'
           %>
        </div>
      </div>
      <div class="d-flex flex-row justify-content-center align-items-baseline row row-cols-1 row-cols-sm-2">
        <div class="col">
          <%= f.input :category,
          label: 'Catégorie',
          error: 'Choisissez une catégorie',
          collection: Mouette::CATEGORIES %>
          </div>
          <div class="col">
            <%= f.input :description,
          label: 'Description',
          error: 'Décrivez votre mouette'
           %>
          </div>
      </div>
      <div class="d-flex flex-row justify-content-center align-items-baseline row row-cols-1 row-cols-sm-2">
        <div class="col ">
          <div id="input-form">
              <%= f.input :address,
              label: 'Localisation de la mouette',
              error: 'Veuillez préciser la localisation de la mouette',
              input_html: {data: {address_autocomplete_target: "address"}, class: "d-none"},
              wrapper_html: {data: {controller: "address-autocomplete", address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
            %>
            </div>
          </div>
          <div class="col ">
            <%= f.input :photo,
            label: 'Photo',
            error: 'Ajoutez une photo de votre mouette',
            as: :file %>
        </div>
      </div>
      <div class="d-flex flex-row justify-content-center col-3">
          <%= f.button :submit, "Publier", class: "btn btn-outline-dark m-4 text-wrap" %>
      </div>
      </div>
    </div>
  </div>
<% end %>
