<div class="container d-flex flex-column justify-content-center space-between ">
    <h1 id="index-title" class="my-5 text-center"><strong>Trouvez les mouettes de votre région</strong></h1>

    <div class="d-flex justify-content-center align-items-center">
      <div class="row d-flex justify-content-around">

        <% @mouettes.each do |mouette|  %>
          <div class="card col-12 col-sm-3 m-2">
            <div class="card-img">
              <img src="<%= cl_image_path mouette.photo.key, crop: :fill %>" alt="<%mouette.name%> the seagull" class="card-img-top">
              <p><%= mouette.rating %> ⭐️</p>
            </div>
            <div class="card-body">
              <div class="card-price">
                <p><%=mouette.price%> €</p>
              </div>
              <h5 class="card-title"><%= link_to mouette.name, mouette_path(mouette), class: "text-decoration-none text-reset" %></h5>
              <p class="card-text"><small class="text-body-secondary"><%=mouette.availability%></small></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>

</div>

<div class="d-flex justify-content-center align-items-center">
    <%= link_to "Ajoutez une mouette!", new_mouette_path, class: "btn btn-info btn-lg my-3 col-2" %>
</div>
