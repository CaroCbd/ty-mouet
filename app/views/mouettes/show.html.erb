<div class="container d-flex flex-column shadow bg-white p-4 rounded-5 mt-2">
  <h1 class="my-3 d-flex justify-content-center">
    <strong><%= @mouette.name %></strong>
  </h1>

 <div class="d-flex mt-2 flex-column align-items-center">
    <div class="row row-cols-1 row-cols-md-2 g-3">
      <div class="col">
        <div class="image_tag rounded img-thumbnail">
          <%=cl_image_tag @mouette.photo.key, class:"img-fluid"%>
        </div>
      </div>
      <div class="col">
            <p> <%= @mouette.description %></p>
      <p> Disponibilités : <%= @mouette.availability %></p>
      <p> Cette mouette à une note de : <%= @mouette.rating %> ⭐️</p>

      <% if current_user != @mouette.owner %>
      <div class="col-10 mt-5 mx-2 py-3 px-2 rounded d-flex flex-column align-items-center justify-content-center">

        <form action="/mouettes/<%=@mouette.id%>/bookings" id="new_booking" method="post" class="d-flex">
          <div class="row">
            <div class="col-sm-6 my-2 text-center">

            <label for="booking[start_date]"><strong>Date de début:</strong></label>
            <input type="date" id="start-wanted-date" name="booking[start_date]" value="<%=Date.today%>" min="2024-11-20" max="2028-12-31" />

            </div>
            <div class="col-sm-6 my-2 text-center">
            <label for="booking[end_date]"> <strong> Date de fin:</strong></label>
            <input type="date" id="end-wanted-date" name="booking[end_date]" value="<%=Date.today%>" min="2024-11-21" max="2028-12-31" />
          </div>
          <div class="row col-6">
          </div>
          <div class="d-flex justify-content-center">

          <input type="submit" name="commit" class="btn btn-outline-primary m-5 p-3 fs-5" value="Bookez votre mouette" >
          </div>

        </form>
      </div>
      <% else %>
        <div class="d-flex justify-content-center gap-3 m-2">
          <%= link_to new_user_session_path, class: "text-decoration-none text-reset" do %>
            <button class="btn btn-success">Se comouetter</button>
          <% end %>
          <%= link_to new_user_registration_path, class: "text-decoration-none text-reset" do %>
            <button class="btn btn-info">Se décomouetter</button>
          <% end %>
      <% end %>

      </div>
    </div>
  </div>
</div>
</div>
